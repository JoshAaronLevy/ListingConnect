.mega-nav(ng-controller="AuthController")
	.wrapper
		nav.navbar.navbar-default(role="navigation")
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#main-nav")
						span.sr-only Toggle Navigation
						i.fa.fa-bars
					a.navbar-brand.navbar-logo(href="/index.html")
						img(src="/images/logo-big.png", alt="ListingConnect")
				#main-nav.navbar-collapse.collapse.navbar-mega-menu
					ul.nav.navbar-nav.navbar-right.nav-alt(ng-if="$root.agent")
						li
							a(href="/agent/leads.html") Leads
						li
							a(href="/agent/favorites.html") Favorites
						li
							a(href="/agent/messages.html") Messages
						li
							a(href="/agent/profile.html") Profile
						li.dropdown
							a.dropdown-toggle(href="#", data-toggle="dropdown")
								| {{$root.user.username}}
								i.fa.fa-angle-down
							ul.dropdown-menu(role="menu")
								li
									a(data-toggle="modal", data-target="#supportModal") Support
								li
									a(data-toggle="modal", data-target="#signoutModal") Sign Out
					ul.nav.navbar-nav.navbar-right.nav-alt(ng-if="$root.consumer")
						li
							a(href="/consumer/agents.html") Agents
						li
							a(href="/consumer/favorites.html") Favorites
						li
							a(href="/consumer/messages.html") Messages
						li
							a(href="/consumer/profile.html") Profile
						li.dropdown
							a.dropdown-toggle(href="#", data-toggle="dropdown")
								| {{$root.user.username}}
								i.fa.fa-angle-down
							ul.dropdown-menu(role="menu")
								li
									a(data-toggle="modal", data-target="#supportModal") Support
								li
									a(data-toggle="modal", data-target="#signoutModal") Sign Out

		#signoutModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="signoutLabel", aria-hidden="true")
			.modal-dialog.modal-sm
				.modal-content
					.modal-header
						button.close(type="button", data-dismiss="modal")
							span(aria-hidden="true") &#215;
							span.sr-only Close
						center(align="center")
							h4#signoutLabel.modal-title Sign Out
					.modal-body
						form(role="form", name="frm", ng-submit="$root.logout()")
							center(align="center")
								span Are you sure you want to sign out?
							br
							.row
								center(align="center")
									button.btn.btn-rw.btn-primary(type="submit") Yes
									button.btn.btn-rw.btn-danger(type="button", data-dismiss="modal") No

		#supportModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="supportLabel", aria-hidden="true")
			.modal-dialog.modal-lg
				.modal-content
					.modal-header
						button.close(type="button", data-dismiss="modal")
							span(aria-hidden="true") &#215;
							span.sr-only Close
						center(align="center")
							h4#supportLabel.modal-title Customer Support
					.modal-body
						iframe#contactform123(allowtransparency='true', style='min-height:600px; height:inherit; overflow:auto;', width='100%', name='contactform123', marginwidth='0', marginheight='0', frameborder='0', src='https://www.123contactform.com/my-contact-form-1296453.html')
					.modal-footer
						button.btn.btn-danger(data-toggle="modal") Close